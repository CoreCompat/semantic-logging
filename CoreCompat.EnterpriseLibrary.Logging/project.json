{

  "version": "6.0.1304-*",

  "authors": [ "Microsoft" ],
  "title": "Enterprise Library - Logging Application Block for .NET Core",
  "description": "The Enterprise Library Logging Application Block simplifies logging to various destinations (file, database, event log, MSMQ etc.) and tracing.",

  "packOptions": {
    "licenseUrl": "https://github.com/CoreCompat/semantic-logging/blob/master/LICENSE.txt",
    "owners": [ "quamotion" ],
    "repository": {
      "type": "git",
      "url": "https://github.com/CoreCompat/semantic-logging/"
    }
  },

  "dependencies": {
    "Newtonsoft.Json": "8.0.4-beta1"
  },

  "buildOptions": {
    "keyFile": "../CoreCompat.EnterpriseLibrary.Common.snk",
    "strongName": true,
    "compile": {
      "include": [
        "../Source/Src/SemanticLogging/**/*.cs"
      ]
    }
  },

  "frameworks": {
    "netstandard1.5": {
      "dependencies": {
        "NETStandard.Library": "1.5.0-rc2-24027",
        "System.Runtime.Serialization.Primitives": "4.1.1-rc3-24117-00",
        "System.Runtime.Serialization.Formatters": "4.0.0-rc3-24117-00",
        "System.ComponentModel.TypeConverter": "4.0.1-rc2-24027",
        "System.Threading.Tasks.Parallel": "4.0.1-rc2-24027"
      },
      "buildOptions": {
        "define": [ "CORECLR", "SIGN" ]
      }
    }
  },

  "runtimes": {
    "win7-x64": { }
  }
}
